---
import { readFileSync } from 'fs';
import { join } from 'path';

interface Props {
  pageName: string;
}

const { pageName } = Astro.props;
const contentPath = join(process.cwd(), 'src/content/pages', `${pageName}.html`);

let content = '';
try {
  content = readFileSync(contentPath, 'utf-8');
} catch (error) {
  content = `<div class="error">Page ${pageName} not found</div>`;
}
---

<main class="container">
  <div set:html={content} />
</main>

<style>
  .error {
    color: red;
    padding: 2rem;
    text-align: center;
  }
</style> 