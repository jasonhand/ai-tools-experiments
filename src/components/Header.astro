---
// Centralized navigation configuration
const navItems = [
    { href: '/', label: 'Home', id: 'home' },
    { href: '/observations', label: 'Observations', id: 'observations' },
    { href: '/about', label: 'About', id: 'about' }
];

// Get current path for active state
const currentPath = Astro.url.pathname;
---

<header class="site-header">
    <img src="/images/ai-tools-lab-logo.png" alt="AI Tools Lab Logo" class="header-logo-bg">
    <div class="container">
        <div class="logo">
            <a href='/'>AI Tools Lab</a>
        </div>
        <nav>
            <ul>
                {navItems.map(item => (
                    <li><a href={item.href} class={currentPath === item.href ? 'active' : ''}>{item.label}</a></li>
                ))}
            </ul>
        </nav>
        <div class="hamburger-menu" aria-label="Toggle navigation menu" role="button" tabindex="0">
            <img src="/images/ai-tools-lab-logo.png" alt="Menu" class="menu-logo">
        </div>
    </div>
    <div class="mobile-nav-overlay"></div>
    <div class="mobile-nav">
        <ul>
            {navItems.map(item => (
                <li><a href={item.href} class={currentPath === item.href ? 'active' : ''}>{item.label}</a></li>
            ))}
        </ul>
    </div>
</header>

<style>
/* Mobile Navigation Styles */
@media (max-width: 768px) {
    .site-header {
        height: 80px;
        padding: 0 15px;
    }
    
    .site-header .container {
        position: relative;
        padding: 0;
        max-width: none;
        width: 100%;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    
    .logo {
        flex: 0 0 auto;
        position: static;
        left: auto;
        top: auto;
        transform: none;
        max-width: calc(100vw - 80px);
    }
    
    .site-header nav {
        display: none;
    }
    
    .hamburger-menu {
        display: flex !important;
        cursor: pointer;
        position: relative;
        right: 0;
        top: auto;
        transform: none;
        background-color: rgba(255, 255, 255, 0.3);
        border-radius: 50%;
        width: 45px;
        height: 45px;
        align-items: center;
        justify-content: center;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
        transition: all 0.3s ease;
        z-index: 1001;
        flex-shrink: 0;
        margin-left: 15px;
    }
    
    .menu-logo {
        width: 28px;
        height: 28px;
        object-fit: contain;
        filter: brightness(0) invert(1);
        transition: all 0.3s ease;
    }
    
    .hamburger-menu.active {
        background-color: rgba(143, 70, 241, 0.3);
        transform: rotate(10deg);
    }
    
    .hamburger-menu.active .menu-logo {
        transform: rotate(180deg);
    }
    
    /* Override conflicting styles from main CSS that add horizontal lines */
    .hamburger-menu::before {
        display: none !important;
        content: none !important;
    }
    
    .hamburger-menu.active::before {
        display: none !important;
        content: none !important;
    }
    
    .mobile-nav-overlay {
        display: block;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
        z-index: 999;
        opacity: 0;
        visibility: hidden;
        transition: all 0.3s ease;
    }
    
    .mobile-nav-overlay.active {
        opacity: 1;
        visibility: visible;
    }
    
    .mobile-nav {
        display: block;
        position: fixed;
        top: 0;
        right: -100%;
        width: 80%;
        max-width: 300px;
        height: 100vh;
        background-color: #3E2D73;
        z-index: 1002;
        transition: right 0.3s ease;
        padding-top: 80px;
        box-shadow: -2px 0 5px rgba(0, 0, 0, 0.2);
        overflow-y: auto;
    }
    
    .mobile-nav.open {
        right: 0;
    }
    
    .mobile-nav ul {
        list-style: none;
        padding: 20px;
        margin: 0;
    }
    
    .mobile-nav li {
        margin-bottom: 15px;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }
    
    .mobile-nav li:last-child {
        border-bottom: none;
    }
    
    .mobile-nav a {
        color: white;
        text-decoration: none;
        font-size: 18px;
        display: block;
        padding: 15px 20px;
        border-radius: 6px;
        transition: background-color 0.2s ease;
    }
    
    .mobile-nav a:hover,
    .mobile-nav a:focus {
        background-color: rgba(255, 255, 255, 0.15);
    }
    
    .mobile-nav a.active {
        background-color: rgba(255, 255, 255, 0.2);
        font-weight: 600;
    }
}

/* Hide hamburger menu and mobile nav elements on desktop */
.hamburger-menu {
    display: none;
}

.mobile-nav-overlay {
    display: none;
}

.mobile-nav {
    display: none;
}

/* Override conflicting styles from main CSS */
@media (max-width: 768px) {
    /* Ensure our mobile nav elements are visible and properly styled */
    .mobile-nav-overlay {
        display: block !important;
        position: fixed !important;
        top: 0 !important;
        left: 0 !important;
        width: 100% !important;
        height: 100% !important;
        background-color: rgba(0, 0, 0, 0.5) !important;
        z-index: 999 !important;
        opacity: 0 !important;
        visibility: hidden !important;
        transition: all 0.3s ease !important;
    }
    
    .mobile-nav-overlay.active {
        opacity: 1 !important;
        visibility: visible !important;
    }
    
    .mobile-nav {
        display: block !important;
        position: fixed !important;
        top: 0 !important;
        right: -100% !important;
        width: 80% !important;
        max-width: 300px !important;
        height: 100vh !important;
        background-color: #3E2D73 !important;
        z-index: 1002 !important;
        transition: right 0.3s ease !important;
        padding-top: 80px !important;
        box-shadow: -2px 0 5px rgba(0, 0, 0, 0.2) !important;
        overflow-y: auto !important;
    }
    
    .mobile-nav.open {
        right: 0 !important;
    }
}

@media (max-width: 480px) {
    .site-header {
        height: 70px;
        padding: 0 10px;
    }
    
    .logo a {
        font-size: 1.2rem !important;
        max-width: calc(100vw - 100px);
    }
    
    .hamburger-menu {
        width: 40px;
        height: 40px;
        margin-left: 10px;
    }
    
    .menu-logo {
        width: 24px;
        height: 24px;
    }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
    console.log('Header script loading...');
    
    const hamburgerMenu = document.querySelector('.hamburger-menu');
    const mobileNav = document.querySelector('.mobile-nav');
    const mobileNavOverlay = document.querySelector('.mobile-nav-overlay');
    
    console.log('Elements found:', {
        hamburgerMenu: !!hamburgerMenu,
        mobileNav: !!mobileNav,
        mobileNavOverlay: !!mobileNavOverlay
    });
    
    if (hamburgerMenu && mobileNav && mobileNavOverlay) {
        function toggleMenu() {
            const isOpen = mobileNav.classList.contains('open');
            console.log('Toggling menu, currently open:', isOpen);
            
            if (isOpen) {
                mobileNav.classList.remove('open');
                hamburgerMenu.classList.remove('active');
                mobileNavOverlay.classList.remove('active');
                document.body.style.overflow = '';
            } else {
                mobileNav.classList.add('open');
                hamburgerMenu.classList.add('active');
                mobileNavOverlay.classList.add('active');
                document.body.style.overflow = 'hidden';
            }
        }
        
        hamburgerMenu.addEventListener('click', function(e) {
            e.preventDefault();
            e.stopPropagation();
            console.log('Hamburger menu clicked');
            toggleMenu();
        });
        
        mobileNavOverlay.addEventListener('click', function(e) {
            console.log('Overlay clicked');
            toggleMenu();
        });
        
        // Close menu on window resize
        window.addEventListener('resize', function() {
            if (window.innerWidth > 768 && mobileNav.classList.contains('open')) {
                console.log('Closing menu due to resize');
                toggleMenu();
            }
        });
        
        console.log('Mobile menu initialized successfully');
    } else {
        console.error('Mobile menu elements not found');
    }
});
</script>
