---
interface Props {
    hideEpisodesLink?: boolean;
}

const { hideEpisodesLink = false } = Astro.props;

// Centralized navigation configuration (matches navigation.js) - removed Articles
const navigationItems = [
    { href: '/', label: 'Home', id: 'home' },
    { href: '/observations', label: 'Observations', id: 'observations' },
    { href: '/about', label: 'About', id: 'about' }
];

// Add Episodes link if not hidden (for main pages that show it)
const navItems = hideEpisodesLink 
    ? navigationItems 
    : [
        navigationItems[0], // Home
        { href: '/episodes', label: 'Episodes', id: 'episodes' },
        ...navigationItems.slice(1) // Rest of the items
    ];

// Get current path for active state
const currentPath = Astro.url.pathname;
---

<header class="site-header">
    <div class="bubble"></div>
    <div class="bubble"></div>
    <div class="bubble"></div>
    <div class="bubble"></div>
    <div class="bubble"></div>
    <div class="bubble"></div>
    <div class="bubble"></div>
    <div class="container">
        <div class="logo">
            <img src="/images/ai-tools-lab-logo.png" alt="AI Tools Lab Logo" class="site-logo">
            <a href='/'>AI Tools Lab</a>
        </div>
        <nav>
            <ul>
                {navItems.map(item => (
                    <li><a href={item.href} class={currentPath === item.href ? 'active' : ''}>{item.label}</a></li>
                ))}
            </ul>
        </nav>
    </div>
</header>
