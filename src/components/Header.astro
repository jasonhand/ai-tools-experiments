---
// Centralized navigation configuration
const navItems = [
    { href: '/', label: 'Home', id: 'home' },
    { href: '/observations', label: 'Observations', id: 'observations' },
    { href: '/about', label: 'About', id: 'about' }
];

// Get current path for active state
const currentPath = Astro.url.pathname;
---

<header class="site-header">
    <img src="/images/ai-tools-lab-logo.png" alt="AI Tools Lab Logo" class="header-logo-bg">
    <div class="container">
        <div class="logo">
            <a href='/'>AI Tools Lab</a>
        </div>
        <nav>
            <ul>
                {navItems.map(item => (
                    <li><a href={item.href} class={currentPath === item.href ? 'active' : ''}>{item.label}</a></li>
                ))}
            </ul>
        </nav>
        <div class="hamburger-menu" aria-label="Toggle navigation menu" role="button" tabindex="0">
            <img src="/images/ai-tools-lab-logo.png" alt="Menu" class="menu-logo">
        </div>
    </div>
</header>

<style>
/* Mobile Navigation Styles */
@media (max-width: 768px) {
    .site-header {
        height: 80px;
        padding: 0 15px;
    }
    
    .site-header .container {
        position: relative;
        padding: 0;
        max-width: none;
        width: 100%;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    
    .logo {
        flex: 0 0 auto;
        position: static;
        left: auto;
        top: auto;
        transform: none;
        max-width: calc(100vw - 80px);
    }
    
    .site-header nav {
        display: none;
    }
    
    .hamburger-menu {
        display: flex !important;
        cursor: pointer;
        position: fixed;
        right: 15px;
        top: 40px; /* Half of 80px header height */
        transform: translateY(-50%);
        background-color: rgba(255, 255, 255, 0.3);
        border-radius: 50%;
        width: 45px;
        height: 45px;
        align-items: center;
        justify-content: center;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
        transition: all 0.3s ease;
        z-index: 99999;
        flex-shrink: 0;
    }
    
    .menu-logo {
        width: 28px;
        height: 28px;
        object-fit: contain;
        filter: brightness(0) invert(1);
        transition: all 0.3s ease;
    }
    
    .hamburger-menu.active {
        background-color: rgba(143, 70, 241, 0.3);
        transform: rotate(10deg);
    }
    
    .hamburger-menu.active .menu-logo {
        transform: rotate(180deg);
    }
    
    /* Override conflicting styles from main CSS that add horizontal lines */
    .hamburger-menu::before {
        display: none !important;
        content: none !important;
    }
    
    .hamburger-menu.active::before {
        display: none !important;
        content: none !important;
    }
    
}

/* Hide hamburger menu on desktop */
.hamburger-menu {
    display: none;
}

@media (max-width: 480px) {
    .site-header {
        height: 70px;
        padding: 0 10px;
    }
    
    .logo a {
        font-size: 1.2rem !important;
        max-width: calc(100vw - 100px);
    }
    
    .hamburger-menu {
        width: 40px;
        height: 40px;
        right: 10px;
        top: 35px; /* Half of 70px header height */
    }
    
    .menu-logo {
        width: 24px;
        height: 24px;
    }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
    console.log('Header script loading...');
    
    const hamburgerMenu = document.querySelector('.hamburger-menu');
    const mobileNav = document.querySelector('.mobile-nav');
    const mobileNavOverlay = document.querySelector('.mobile-nav-overlay');
    
    console.log('Elements found:', {
        hamburgerMenu: !!hamburgerMenu,
        mobileNav: !!mobileNav,
        mobileNavOverlay: !!mobileNavOverlay
    });
    
    if (hamburgerMenu && mobileNav && mobileNavOverlay) {
        function toggleMenu() {
            const isOpen = mobileNav.classList.contains('open');
            console.log('Toggling menu, currently open:', isOpen);
            
            if (isOpen) {
                mobileNav.classList.remove('open');
                hamburgerMenu.classList.remove('active');
                mobileNavOverlay.classList.remove('active');
                document.body.style.overflow = '';
            } else {
                mobileNav.classList.add('open');
                hamburgerMenu.classList.add('active');
                mobileNavOverlay.classList.add('active');
                document.body.style.overflow = 'hidden';
            }
        }
        
        hamburgerMenu.addEventListener('click', function(e) {
            e.preventDefault();
            e.stopPropagation();
            console.log('Hamburger menu clicked');
            toggleMenu();
        });
        
        mobileNavOverlay.addEventListener('click', function(e) {
            console.log('Overlay clicked');
            toggleMenu();
        });
        
        // Close menu on window resize
        window.addEventListener('resize', function() {
            if (window.innerWidth > 768 && mobileNav.classList.contains('open')) {
                console.log('Closing menu due to resize');
                toggleMenu();
            }
        });
        
        console.log('Mobile menu initialized successfully');
    } else {
        console.error('Mobile menu elements not found');
    }
});
</script>
