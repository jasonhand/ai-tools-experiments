---
import MainLayout from '../layouts/MainLayout.astro';
import EpisodeCard from '../components/EpisodeCard.astro';
import { getAllEpisodes, getFeaturedEpisode } from '../utils/episodes';

// Get all episodes and featured episode
const allEpisodes = await getAllEpisodes();
const featuredEpisode = await getFeaturedEpisode();
---

<MainLayout title="AI Tools Lab" description="Exploring the landscape of AI tools and technologies">
    <main class="container about-section">
        <!-- Featured Episode Section -->
        {featuredEpisode && (
            <section class="featured-episode">
                <h2>Newest Episode</h2>
                <div class="featured-episode-container">
                    <div class="featured-episode-hero">
                        <a href={`/episodes/ep${featuredEpisode.number.toString().padStart(2, '0')}`}>
                            <img src={featuredEpisode.heroImg} alt={featuredEpisode.title}>
                            <div class="hero-overlay"></div>
                            <div class="hero-content">
                                <h3 class="hero-title">{featuredEpisode.title}</h3>
                            </div>
                            <div class="play-button-overlay">
                                <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" viewBox="0 0 24 24" fill="#ffffff">
                                    <path d="M8 5v14l11-7z"/>
                                </svg>
                            </div>
                        </a>
                    </div>
                    <div class="featured-episode-content">
                        <div class="episode-meta-info">
                            <span class="content-episode-number">Episode {featuredEpisode.number}</span>
                            <span class="content-date">{new Date(featuredEpisode.date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}</span>
                            {featuredEpisode.participants && featuredEpisode.participants.length > 0 && (
                                <div class="content-participants">
                                    <span class="participants-label">Featuring:</span>
                                    <span class="participants-list">
                                        {featuredEpisode.participants.join(', ')}
                                    </span>
                                </div>
                            )}
                        </div>
                        <p>{featuredEpisode.description}</p>
                        <div class="featured-episode-tags">
                            {featuredEpisode.tags?.slice(0, 4).map(tag => 
                                <span class="tag">{tag}</span>
                            )}
                        </div>
                    </div>
                </div>
            </section>
        )}
        
        <!-- All Episodes Section -->
        <section class="all-episodes">
            
            <div class="episodes-grid">
                {allEpisodes.slice(1).map((episode) => (
                    <EpisodeCard 
                        episode={episode} 
                        showFeaturedBadge={false}
                    />
                ))}
            </div>
        </section>
    </main>
</MainLayout>

<style>
    /* Index page container styling to match observations page */
    .about-section {
        background-color: white;
        border-radius: 8px;
        padding: 2rem;
        box-shadow: var(--shadow);
        margin-top: -1rem;
        margin-bottom: 2rem;
        position: relative;
        max-width: 1200px;
        margin-left: auto;
        margin-right: auto;
    }

    .featured-episode {
        margin-bottom: 40px;
        padding: 25px;
        background: linear-gradient(145deg, #f0f7ff 0%, #e6f0ff 100%);
        border-radius: 12px;
        box-shadow: 0 4px 15px rgba(0, 86, 210, 0.1);
    }
    
    .featured-episode h2 {
        margin-bottom: 20px;
        font-size: 1.8rem;
        color: #0066cc;
        border-bottom: 2px solid #0066cc;
        padding-bottom: 8px;
        display: inline-block;
    }
    
    .featured-episode-container {
        display: flex;
        gap: 25px;
        align-items: flex-start;
    }
    
    .featured-episode-hero {
        flex: 0 0 60%;
        position: relative;
        border-radius: 16px;
        overflow: hidden;
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
        height: 400px;
    }
    
    .featured-episode-hero a {
        display: block;
        width: 100%;
        height: 100%;
        text-decoration: none;
        color: inherit;
    }
    
    .featured-episode-hero img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: center;
        transition: transform 0.3s ease;
    }
    
    .featured-episode-hero:hover img {
        transform: scale(1.02);
    }
    
    .hero-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(
            to bottom,
            rgba(0, 0, 0, 0.3) 0%,
            rgba(0, 0, 0, 0.5) 50%,
            rgba(0, 0, 0, 0.7) 100%
        );
        z-index: 1;
    }
    
    .hero-content {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        padding: 2rem;
        z-index: 2;
        text-align: center;
        background: linear-gradient(
            to top,
            rgba(0, 0, 0, 0.8) 0%,
            rgba(0, 0, 0, 0.4) 70%,
            transparent 100%
        );
    }
    
    .hero-title {
        font-size: 2rem;
        font-weight: 800;
        color: white;
        margin: 0 0 1rem 0;
        line-height: 1.2;
        text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.7);
    }
    
    .episode-meta-info {
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
        align-items: center;
        margin-bottom: 1.5rem;
        padding-bottom: 1rem;
        border-bottom: 2px solid #e6f0ff;
    }
    
    .content-episode-number {
        background: var(--accent-color);
        color: white;
        padding: 0.4rem 1rem;
        border-radius: 20px;
        font-weight: 700;
        font-size: 0.85rem;
        box-shadow: 0 2px 8px rgba(0, 102, 204, 0.2);
    }
    
    .content-date {
        color: var(--secondary-color);
        font-size: 0.9rem;
        font-weight: 600;
    }
    
    .content-participants {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }
    
    .participants-label {
        color: var(--secondary-color);
        font-size: 0.8rem;
        font-weight: 500;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }
    
    .participants-list {
        color: var(--primary-color);
        font-size: 0.9rem;
        font-weight: 600;
    }
    
    .play-button-overlay {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        background-color: rgba(0, 102, 204, 0.8);
        border-radius: 50%;
        width: 70px;
        height: 70px;
        display: flex;
        align-items: center;
        justify-content: center;
        opacity: 0.9;
        transition: all 0.3s ease;
        z-index: 3;
    }
    
    .featured-episode-hero:hover .play-button-overlay {
        background-color: rgba(0, 102, 204, 1);
        opacity: 1;
        transform: translate(-50%, -50%) scale(1.1);
    }
    
    .featured-episode-content {
        flex: 1;
        padding-top: 1rem;
    }
    
    .featured-episode-content p {
        font-size: 1.05rem;
        line-height: 1.6;
        margin-bottom: 20px;
        color: #333;
    }
    
    .featured-episode-tags {
        display: flex;
        gap: 8px;
        flex-wrap: wrap;
    }
    
    .tag {
        background-color: #0066cc;
        color: white;
        padding: 4px 10px;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: 500;
    }
    

    
    .episodes-intro {
        margin-bottom: 30px;
    }
    
    .episodes-intro h2 {
        font-size: 2.2rem;
        margin-bottom: 10px;
        color: #333;
    }
    
    .episodes-intro p {
        font-size: 1.1rem;
        color: #666;
        line-height: 1.6;
    }
    
    .episodes-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
        gap: 30px;
        margin-top: 30px;
    }
    
    @media (max-width: 768px) {
        .featured-episode-container {
            flex-direction: column;
        }
        
        .featured-episode-hero {
            flex: 0 0 100%;
            height: 300px;
            margin-bottom: 20px;
        }
        
        .hero-content {
            padding: 1.5rem;
        }
        
        .hero-title {
            font-size: 1.5rem;
        }
        
        .episode-meta-info {
            flex-direction: column;
            align-items: flex-start;
            gap: 0.75rem;
        }
        
        .episodes-grid {
            grid-template-columns: 1fr;
        }
    }
</style>
