        padding-right: 5px;
    }
    
    .filter-item {
        display: flex;
        align-items: center;
        gap: 8px;
        padding: 8px 10px;
        border-radius: 6px;
        cursor: pointer;
        transition: all 0.2s ease;
        font-size: 0.9rem;
    }
    
    .filter-item:hover {
        background-color: #f0f0ff;
    }
    
    .filter-item.active {
        background-color: #e6e6ff;
        font-weight: 500;
    }
    
    .filter-item .count {
        margin-left: auto;
        background-color: #e2e2fe;
        border-radius: 12px;
        padding: 2px 8px;
        font-size: 0.75rem;
        color: #4f46e5;
    }
    
    /* Search styling */
    .filter-search {
        width: 100%;
