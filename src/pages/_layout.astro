<style is:global>
    :root {
        --background-color: #ffffff;
        --text-color: #333333;
        --text-color-secondary: #666666;
        --accent-color: #007AFF;
        --border-color: #e5e5e5;
    }

    @media (prefers-color-scheme: dark) {
        :root {
            --background-color: #1a1a1a;
            --text-color: #ffffff;
            --text-color-secondary: #a0a0a0;
            --accent-color: #0A84FF;
            --border-color: #333333;
        }
    }

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
        line-height: 1.6;
        color: var(--text-color);
        background: var(--background-color);
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1rem;
    }

    /* Header Styles */
    .site-header {
        position: relative;
        padding: 1rem 0;
        background: var(--background-color);
        overflow: hidden;
    }

    .bubble {
        position: absolute;
        background: var(--accent-color);
        border-radius: 50%;
        opacity: 0.1;
        animation: float 20s infinite;
    }

    .bubble:nth-child(1) { width: 100px; height: 100px; top: 20%; left: 10%; animation-delay: 0s; }
    .bubble:nth-child(2) { width: 150px; height: 150px; top: 60%; left: 20%; animation-delay: -2s; }
    .bubble:nth-child(3) { width: 80px; height: 80px; top: 30%; left: 50%; animation-delay: -4s; }
    .bubble:nth-child(4) { width: 120px; height: 120px; top: 70%; left: 70%; animation-delay: -6s; }
    .bubble:nth-child(5) { width: 90px; height: 90px; top: 40%; left: 85%; animation-delay: -8s; }
    .bubble:nth-child(6) { width: 110px; height: 110px; top: 80%; left: 40%; animation-delay: -10s; }
    .bubble:nth-child(7) { width: 130px; height: 130px; top: 10%; left: 30%; animation-delay: -12s; }

    @keyframes float {
        0% { transform: translateY(0) rotate(0deg); }
        50% { transform: translateY(-20px) rotate(180deg); }
        100% { transform: translateY(0) rotate(360deg); }
    }

    .logo {
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .site-logo {
        height: 40px;
        width: auto;
    }

    .logo a {
        font-size: 1.5rem;
        font-weight: bold;
        color: var(--text-color);
        text-decoration: none;
    }

    nav ul {
        display: flex;
        gap: 2rem;
        list-style: none;
        margin: 0;
        padding: 0;
    }

    nav a {
        color: var(--text-color);
        text-decoration: none;
        font-weight: 500;
        transition: color 0.3s ease;
    }

    nav a:hover,
    nav a.active {
        color: var(--accent-color);
    }

    /* Footer Styles */
    footer {
        position: relative;
        background: var(--background-color);
        padding: 4rem 0 2rem;
        margin-top: 4rem;
        overflow: hidden;
    }

    .footer-content {
        display: grid;
        grid-template-columns: 2fr 1fr;
        gap: 4rem;
        margin-bottom: 2rem;
    }

    .footer-logo {
        display: flex;
        gap: 1.5rem;
        align-items: flex-start;
    }

    .footer-logo-img {
        height: 60px;
        width: auto;
    }

    .footer-logo h2 {
        font-size: 1.5rem;
        margin: 0 0 0.5rem 0;
        color: var(--text-color);
    }

    .footer-logo p {
        color: var(--text-color-secondary);
        margin: 0;
        line-height: 1.6;
    }

    .footer-links h3 {
        font-size: 1.2rem;
        margin: 0 0 1rem 0;
        color: var(--text-color);
    }

    .footer-links ul {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .footer-links li {
        margin-bottom: 0.5rem;
    }

    .footer-links a {
        color: var(--text-color-secondary);
        text-decoration: none;
        transition: color 0.3s ease;
    }

    .footer-links a:hover {
        color: var(--accent-color);
    }

    .footer-bottom {
        text-align: center;
        padding-top: 2rem;
        border-top: 1px solid var(--border-color);
        color: var(--text-color-secondary);
    }

    .easter-egg {
        cursor: pointer;
        transition: transform 0.3s ease;
    }

    .easter-egg:hover {
        transform: rotate(180deg);
    }

    @media (max-width: 768px) {
        .footer-content {
            grid-template-columns: 1fr;
            gap: 2rem;
        }

        .footer-logo {
            flex-direction: column;
            align-items: center;
            text-align: center;
        }

        nav ul {
            gap: 1rem;
        }
    }
</style> 